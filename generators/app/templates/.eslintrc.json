{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "security"
  ],
  "extends": [
    "airbnb",
    "plugin:import/warnings",
    "plugin:security/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "ignorePatterns": [
    "**/**/*.spec.js"
  ],
  "rules": {
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "comma-dangle": "off"
  }
}
